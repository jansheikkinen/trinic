/* OP Assign Syntax(i.e. x += 1) */

let x, y: int8 = 1, undefined

trait TestTrait
  function testFunction(x: T, y: V, z: Q) -> V
    where y != 0
    for T + V: trait Div + trait Display, Q: trait Display
end

struct TestStruct(T, V) tfield: T, vfield: V end
union TestUnion(T, V) tfield: T, vfield: V end
sum TestSum(T, V) tfield(T), vfield(V) end

function main(argc: usize, argv: ..struct String) -> usize do
  let x, y: int32 = 34, 35;
  x += y;
  x, y -= y, x;
  x, y *= y, x;
  x, y /= y, x;
  x, y %= y, x;
  x, y &= y, x;
  x, y |= y, x;
  x, y ^= y, x;
  x, y <<= y, x;
  x, y >>= y, x;
  x, y = y, x;
end
